<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        android:id="@+id/card"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20sp">

            <TextView
                android:id="@+id/folio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Folio:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/efolio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/folio"
                android:layout_marginBottom="10dp"
                android:text="texto"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/folio"
                android:text="Nombre:"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="texto"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/nombre"
                android:layout_below="@+id/efolio"
                android:id="@+id/enombre"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:text="texto"
                android:textSize="16sp"
                android:id="@+id/etipo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/etipo"
                android:text="Tipo:"
                android:textSize="16sp"
                android:id="@+id/tipo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tipo"
                android:layout_marginTop="10dp"
                android:text="texto"
                android:id="@+id/eestatus"
                android:textSize="16sp"
                />
            <TextView
                android:layout_below="@+id/tipo"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Estatus:"
                android:layout_toLeftOf="@+id/eestatus"
                android:id="@+id/estatus"
                android:textSize="16sp"
                />



        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
