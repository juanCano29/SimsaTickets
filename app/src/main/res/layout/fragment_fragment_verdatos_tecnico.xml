<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cTec.fragment_verdatos_tecnico"
    android:background="@drawable/fondo">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:textSize="22dp"
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:id="@+id/nombre"
        android:paddingTop="22dp"
        android:textColor="#F6D600"/>
    <TextView
        android:id="@+id/nombreeditT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombre"

        android:textSize="22dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:textColor="#FFFFFF"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombreeditT"
        android:text="Apellido Materno:"
        android:textSize="22dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:id="@+id/apellidom"
        android:textColor="#F6D600"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/apellidom"

        android:textSize="22dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:id="@+id/apellidomeditT"
        android:textColor="#FFFFFF"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/apellidomeditT"
        android:text="Apellido Paterno:"
        android:textSize="22dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:id="@+id/apellidop"
        android:textColor="#F6D600"/>
    <TextView
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/apellidop"

        android:textSize="22dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:id="@+id/apellidopeditT"/>
    <TextView
        android:textColor="#F6D600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/apellidopeditT"
        android:text="Telefono de Red:"
        android:textSize="22dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:id="@+id/telefono"/>
    <TextView
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/telefono"

        android:textSize="22dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:id="@+id/telefonoeditT"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/telefonoeditT"
        android:text="Celular:"
        android:textSize="22dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:id="@+id/celular"
        android:textColor="#F6D600"/>
    <TextView
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/celular"

        android:textSize="22dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:id="@+id/celulareditT"/>
    <TextView
        android:textColor="#F6D600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/celulareditT"
        android:text="Correo:"
        android:textSize="22dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:id="@+id/correo"/>
    <TextView
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/correo"

        android:textSize="22dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:id="@+id/correoeditT"/>

    <Button

        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/correoeditT"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ed_box"
        android:text="Editar"
        android:id="@+id/editar"
        />





</RelativeLayout>